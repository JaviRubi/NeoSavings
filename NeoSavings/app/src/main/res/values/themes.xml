<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeoSavings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3d5afe</item>
        <item name="colorPrimaryVariant">#0031ca</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#18ffff</item>
        <item name="colorSecondaryVariant">#00838F</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">#E5E5E5</item>
        <item name ="colorOnSurface">@color/black</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C38FFF</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4CC2FF</item>
        <item name="colorSecondaryVariant">#4B6EAF</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">#121212</item>
        <item name="backgroundColor">#121212</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorSurface">#292929</item>
        <item name ="colorOnSurface">@color/white</item>
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="Q">?attr/colorPrimaryVariant</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:prompt">@color/white</item>
        <item name="android:colorBackgroundCacheHint">@color/white</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.NeoSavings.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NeoSavings.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeoSavings.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>